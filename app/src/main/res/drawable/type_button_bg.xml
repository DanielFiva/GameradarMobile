<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed / selected -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#4CAF50"/> <!-- green for selected -->
            <corners android:radius="8dp"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2A2D33"/> <!-- dark default -->
            <stroke android:width="1dp" android:color="#C7D5E0"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>

</selector>
